# Database
DATABASE_PATH=./data/photos.db

# Storage
STORAGE_PATH=./storage

# Redis (for job queue and rate limiting)
REDIS_URL=redis://localhost:6379

# Authentication
# Secret key for JWT signing - must be at least 32 characters
AUTH_SECRET=your-secret-key-at-least-32-characters-long
# Bcrypt hash of admin password - generate with: npx tsx scripts/hash-password.ts <password>
ADMIN_PASSWORD_HASH=generate-with-scripts/hash-password.ts

# Security
# Trusted proxy IP addresses (comma-separated) - only trust x-forwarded-for from these IPs
# Example: TRUSTED_PROXIES=127.0.0.1,10.0.0.1
# Leave empty if not behind a reverse proxy
# TRUSTED_PROXIES=

# Site URL (used for OpenGraph meta tags - absolute URLs required)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
