    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.67.2",
    "dotenv": "^17.2.3",
    "exif-reader": "^2.0.3",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "next": "16.1.6",
    "node-addon-api": "^8.5.0",
    "rate-limiter-flexible": "^9.0.1",
